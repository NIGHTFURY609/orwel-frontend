<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.orwel.controller.ProfileController">
   <top>
      <HBox style="-fx-background-color: #2c3e50; -fx-padding: 15;" alignment="CENTER_LEFT" spacing="20">
         <Label text="Orwel" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
         <Region HBox.hgrow="ALWAYS"/>
         <Button text="Dashboard" style="-fx-background-color: transparent; -fx-text-fill: white;" onAction="#navigateToDashboard"/>
         <Button text="Countries" style="-fx-background-color: transparent; -fx-text-fill: white;" onAction="#navigateToCountries"/>
         <Button text="News" style="-fx-background-color: transparent; -fx-text-fill: white;" onAction="#navigateToNews"/>
         <Button text="Profile" style="-fx-background-color: #34495e; -fx-text-fill: white;" onAction="#navigateToProfile"/>
         <Button text="About" style="-fx-background-color: transparent; -fx-text-fill: white;" onAction="#navigateToAbout"/>
         <Button text="Logout" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" onAction="#handleLogout"/>
      </HBox>
   </top>
   
   <center>
      <ScrollPane fitToWidth="true" style="-fx-background-color: #ecf0f1;">
         <VBox spacing="20" style="-fx-background-color: #ecf0f1;">
            <padding>
               <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <Label text="My Profile" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            
            <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
               <Label text="Basic Information" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
               
               <HBox spacing="10">
                  <TextField fx:id="firstNameField" promptText="First Name" HBox.hgrow="ALWAYS"/>
                  <TextField fx:id="lastNameField" promptText="Last Name" HBox.hgrow="ALWAYS"/>
               </HBox>
               
               <TextField fx:id="emailField" promptText="Email"/>
               <TextField fx:id="phoneNumberField" promptText="Phone Number"/>
               
               <Separator/>
               
               <Label text="Location Information" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
               
               <TextField fx:id="addressField" promptText="Street Address"/>
               <HBox spacing="10">
                  <TextField fx:id="cityField" promptText="City" HBox.hgrow="ALWAYS"/>
                  <TextField fx:id="postalCodeField" promptText="Postal Code" prefWidth="150"/>
               </HBox>
               <ComboBox fx:id="countryComboBox" promptText="Select Country" prefWidth="100%"/>
               <Button fx:id="geocodeButton" text="Update Location" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" onAction="#handleGeocode"/>
               <Label fx:id="locationStatusLabel" textFill="#27ae60" style="-fx-font-size: 11px;" visible="false"/>
               
               <Separator/>
               
               <Label text="Personal Information" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
               
               <DatePicker fx:id="dateOfBirthPicker" promptText="Date of Birth"/>
               <ComboBox fx:id="marriageStatusComboBox" promptText="Marriage Status" prefWidth="100%"/>
               <TextField fx:id="occupationField" promptText="Occupation"/>
               
               <Separator/>
               
               <Label text="Preferences" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
               
               <CheckBox fx:id="hasStocksCheckbox" text="I own stocks or investments"/>
               <CheckBox fx:id="plansToTravelCheckbox" text="I plan to travel internationally"/>
               
               <Label text="Interests:" style="-fx-font-size: 12px;"/>
               <FlowPane hgap="10" vgap="5">
                  <CheckBox fx:id="interestPolitics" text="Politics"/>
                  <CheckBox fx:id="interestTax" text="Tax"/>
                  <CheckBox fx:id="interestTravel" text="Travel"/>
                  <CheckBox fx:id="interestStocks" text="Stocks"/>
                  <CheckBox fx:id="interestImmigration" text="Immigration"/>
                  <CheckBox fx:id="interestTrade" text="Trade"/>
               </FlowPane>
               
               <Label fx:id="errorLabel" textFill="#e74c3c" style="-fx-font-size: 12px;" visible="false" wrapText="true"/>
               <Label fx:id="successLabel" textFill="#27ae60" style="-fx-font-size: 12px;" visible="false" wrapText="true"/>
               
               <HBox spacing="10">
                  <Button fx:id="saveButton" text="Save Changes" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-pref-width: 150; -fx-pref-height: 40;" onAction="#handleSave"/>
                  <Button fx:id="cancelButton" text="Cancel" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 5; -fx-pref-width: 150; -fx-pref-height: 40;" onAction="#handleCancel"/>
               </HBox>
            </VBox>
         </VBox>
      </ScrollPane>
   </center>
</BorderPane>
