<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.orwel.controller.NewsController">
   <fx:define>
      <ToggleGroup fx:id="newsTypeGroup"/>
   </fx:define>
   <top>
      <VBox>
         <HBox style="-fx-background-color: #2c3e50; -fx-padding: 15;" alignment="CENTER_LEFT" spacing="20">
            <Label text="Orwel" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Dashboard" style="-fx-background-color: transparent; -fx-text-fill: white;" onAction="#navigateToDashboard"/>
            <Button text="Companies" style="-fx-background-color: transparent; -fx-text-fill: white;" onAction="#navigateToCountries"/>
            <Button text="Market News" style="-fx-background-color: #34495e; -fx-text-fill: white;" onAction="#navigateToNews"/>
            <Button text="Investor Profile" style="-fx-background-color: transparent; -fx-text-fill: white;" onAction="#navigateToProfile"/>
            <Button text="About" style="-fx-background-color: transparent; -fx-text-fill: white;" onAction="#navigateToAbout"/>
            <Button text="Logout" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" onAction="#handleLogout"/>
         </HBox>
         
         <!-- Filters -->
         <HBox spacing="10" style="-fx-background-color: #ecf0f1; -fx-padding: 15;" alignment="CENTER_LEFT">
            <Label text="Filter:" style="-fx-font-weight: bold;"/>
            <RadioButton fx:id="personalizedRadio" text="Personalized" toggleGroup="$newsTypeGroup" selected="true" onAction="#handleFilterChange"/>
            <RadioButton fx:id="generalRadio" text="General" toggleGroup="$newsTypeGroup" onAction="#handleFilterChange"/>
            <Region HBox.hgrow="ALWAYS"/>
            <ComboBox fx:id="regionComboBox" promptText="Filter by Region" onAction="#handleFilterChange"/>
            <ComboBox fx:id="countryComboBox" promptText="Filter by Companies" onAction="#handleFilterChange"/>
            <TextField fx:id="searchField" promptText="Search news..." prefWidth="200" onAction="#handleSearch"/>
            <Button text="Search" onAction="#handleSearch"/>
         </HBox>
      </VBox>
   </top>
   
   <center>
      <ScrollPane fitToWidth="true" style="-fx-background-color: #ecf0f1;">
         <VBox spacing="15" style="-fx-background-color: #ecf0f1;">
            <padding>
               <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <Label fx:id="newsTitleLabel" text="Personalized News" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            
            <ListView fx:id="newsListView" style="-fx-background-color: white; -fx-background-radius: 10;"/>
         </VBox>
      </ScrollPane>
   </center>
</BorderPane>
