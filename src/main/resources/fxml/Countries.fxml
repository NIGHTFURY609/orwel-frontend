<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.orwel.controller.CountriesController">
   <top>
      <VBox>
         <HBox style="-fx-background-color: #2c3e50; -fx-padding: 15;" alignment="CENTER_LEFT" spacing="20">
            <Label text="Orwel" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Dashboard" style="-fx-background-color: transparent; -fx-text-fill: white;" onAction="#navigateToDashboard"/>
            <Button text="Companies" style="-fx-background-color: #34495e; -fx-text-fill: white;" onAction="#navigateToCountries"/>
            <Button text="Market News" style="-fx-background-color: transparent; -fx-text-fill: white;" onAction="#navigateToNews"/>
            <Button text="Investor Profile" style="-fx-background-color: transparent; -fx-text-fill: white;" onAction="#navigateToProfile"/>
            <Button text="About" style="-fx-background-color: transparent; -fx-text-fill: white;" onAction="#navigateToAbout"/>
            <Button text="Logout" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" onAction="#handleLogout"/>
         </HBox>
         
         <HBox spacing="10" style="-fx-background-color: #ecf0f1; -fx-padding: 15;" alignment="CENTER_LEFT">
            <Label text="Search:" style="-fx-font-weight: bold;"/>
            <TextField fx:id="searchField" promptText="Search companies or tickers..." prefWidth="300" onAction="#handleSearch"/>
            <Region HBox.hgrow="ALWAYS"/>
            <ComboBox fx:id="regionFilterComboBox" promptText="Filter by Sector" onAction="#handleFilter"/>
         </HBox>
      </VBox>
   </top>
   
   <center>
      <ScrollPane fitToWidth="true" style="-fx-background-color: #ecf0f1;">
         <FlowPane fx:id="countriesFlowPane" hgap="15" vgap="15" style="-fx-background-color: #ecf0f1;">
            <padding>
               <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
         </FlowPane>
      </ScrollPane>
   </center>
</BorderPane>
