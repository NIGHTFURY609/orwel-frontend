<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.effect.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.orwel.controller.DashboardController" stylesheets="/styles.css">
   <top>
      <VBox>
         <!-- Navigation Bar -->
         <HBox styleClass="nav-bar-dark" style="-fx-padding: 20;" alignment="CENTER_LEFT" spacing="25">
            <Label text="Orwel" style="-fx-text-fill: #2E6BFF; -fx-font-size: 32px; -fx-font-weight: bold; -fx-letter-spacing: 3px;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Dashboard" styleClass="nav-button-dark active" onAction="#navigateToDashboard"/>
            <Button text="Companies" styleClass="nav-button-dark" onAction="#navigateToCountries"/>
            <Button text="Market News" styleClass="nav-button-dark" onAction="#navigateToNews"/>
            <Button text="Investor Profile" styleClass="nav-button-dark" onAction="#navigateToProfile"/>
            <Button text="About" styleClass="nav-button-dark" onAction="#navigateToAbout"/>
            <Button text="Logout" styleClass="neon-button-secondary" style="-fx-background-color: rgba(255, 107, 107, 0.1); -fx-text-fill: #FF6B6B; -fx-border-color: rgba(255, 107, 107, 0.3);" onAction="#handleLogout"/>
         </HBox>
      </VBox>
   </top>
   
   <center>
      <ScrollPane fitToWidth="true" styleClass="scroll-pane" style="-fx-background-color: #0F141C;">
            <VBox fx:id="dashboardContent" spacing="25" styleClass="background-dark" style="-fx-background-color: #0F141C;">
            <padding>
               <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>
            
            <!-- Welcome Section -->
            <VBox fx:id="welcomeCard" spacing="15" styleClass="glass-card" style="-fx-padding: 35;">
               <Label fx:id="welcomeLabel" styleClass="title-medium" style="-fx-font-size: 40px; -fx-text-fill: #00F2FF;"/>
               <Label fx:id="welcomeDescriptionLabel" styleClass="body-text" style="-fx-font-size: 16px;"/>
            </VBox>
            
            <!-- Quick Stats -->
            <HBox spacing="20">
               <VBox fx:id="legislationCard" styleClass="stat-card-neon" style="-fx-pref-width: 220;" alignment="CENTER">
                  <Label fx:id="legislationCountLabel" text="0" styleClass="stat-number"/>
                     <Label text="Active Bills" styleClass="stat-label"/>
               </VBox>
               
               <VBox fx:id="hearingsCard" styleClass="stat-card-neon" style="-fx-pref-width: 220;" alignment="CENTER">
                  <Label fx:id="hearingsCountLabel" text="0" styleClass="stat-number"/>
                     <Label text="Committee Hearings" styleClass="stat-label"/>
               </VBox>
               
               <VBox fx:id="nominationsCard" styleClass="stat-card-neon" style="-fx-pref-width: 220;" alignment="CENTER">
                  <Label fx:id="nominationsCountLabel" text="0" styleClass="stat-number"/>
                     <Label text="Nominations" styleClass="stat-label"/>
               </VBox>
               
               <VBox fx:id="committeesCard" styleClass="stat-card-neon" style="-fx-pref-width: 220;" alignment="CENTER">
                  <Label fx:id="committeesCountLabel" text="0" styleClass="stat-number"/>
                     <Label text="Committees" styleClass="stat-label"/>
               </VBox>
            </HBox>
            
            <!-- Active Legislation -->
            <VBox fx:id="legislationCardSection" spacing="20" styleClass="glass-card" style="-fx-padding: 30;">
               <HBox alignment="CENTER_LEFT">
                  <Label text="ðŸ“œ Active Legislation" styleClass="label-neon-title"/>
                  <Region HBox.hgrow="ALWAYS"/>
               </HBox>
               <ListView fx:id="legislationListView" prefHeight="250" styleClass="list-view-dark"/>
            </VBox>
            
            <!-- Recent Hearings -->
            <VBox fx:id="hearingsCardSection" spacing="20" styleClass="glass-card" style="-fx-padding: 30;">
               <HBox alignment="CENTER_LEFT">
                  <Label text="ðŸŽ¤ Committee Hearings" styleClass="label-neon-title"/>
                  <Region HBox.hgrow="ALWAYS"/>
               </HBox>
               <ListView fx:id="hearingsListView" prefHeight="250" styleClass="list-view-dark"/>
            </VBox>
            
            <!-- Recent Nominations -->
            <VBox fx:id="nominationsCardSection" spacing="20" styleClass="glass-card" style="-fx-padding: 30;">
               <HBox alignment="CENTER_LEFT">
                  <Label text="ðŸ‘¤ Recent Nominations" styleClass="label-neon-title"/>
                  <Region HBox.hgrow="ALWAYS"/>
               </HBox>
               <ListView fx:id="nominationsListView" prefHeight="250" styleClass="list-view-dark"/>
            </VBox>
            
            <!-- Committees -->
            <VBox fx:id="committeesCardSection" spacing="20" styleClass="glass-card" style="-fx-padding: 30;">
               <HBox alignment="CENTER_LEFT">
                  <Label text="ðŸ›ï¸ Committees" styleClass="label-neon-title"/>
                  <Region HBox.hgrow="ALWAYS"/>
               </HBox>
               <ListView fx:id="committeesListView" prefHeight="250" styleClass="list-view-dark"/>
            </VBox>
         </VBox>
      </ScrollPane>
   </center>
</BorderPane>
