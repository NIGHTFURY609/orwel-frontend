<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.orwel.controller.CountryDetailController">
   <top>
      <HBox style="-fx-background-color: #2c3e50; -fx-padding: 15;" alignment="CENTER_LEFT" spacing="20">
         <Button text="â† Back" style="-fx-background-color: transparent; -fx-text-fill: white;" onAction="#handleBack"/>
         <Label text="Orwel" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
         <Region HBox.hgrow="ALWAYS"/>
         <Button text="Dashboard" style="-fx-background-color: transparent; -fx-text-fill: white;" onAction="#navigateToDashboard"/>
         <Button text="Companies" style="-fx-background-color: transparent; -fx-text-fill: white;" onAction="#navigateToCountries"/>
         <Button text="Market News" style="-fx-background-color: transparent; -fx-text-fill: white;" onAction="#navigateToNews"/>
         <Button text="Investor Profile" style="-fx-background-color: transparent; -fx-text-fill: white;" onAction="#navigateToProfile"/>
         <Button text="About" style="-fx-background-color: transparent; -fx-text-fill: white;" onAction="#navigateToAbout"/>
         <Button text="Logout" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" onAction="#handleLogout"/>
      </HBox>
   </top>
   
   <center>
      <ScrollPane fitToWidth="true" style="-fx-background-color: #ecf0f1;">
         <VBox spacing="20" style="-fx-background-color: #ecf0f1;">
            <padding>
               <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <!-- Company Header -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
               <HBox alignment="CENTER_LEFT" spacing="15">
                  <Label fx:id="countryFlagLabel" text="ðŸ“ˆ" style="-fx-font-size: 48px;"/>
                  <VBox>
                     <Label fx:id="countryNameLabel" text="Company Name" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        <Label fx:id="countryCodeLabel" text="Ticker: TDX" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
                  </VBox>
               </HBox>
               <Label fx:id="countrySummaryLabel" text="Company Overview" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" wrapText="true"/>
            </VBox>
            
            <!-- Risk Alerts Section -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
               <Label text="âš¡ Market Alerts" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;"/>
               <ListView fx:id="warningsListView" prefHeight="200"/>
            </VBox>
            
            <!-- Strategies Section -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
               <Label text="Investment Strategies" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
               <ListView fx:id="policiesListView" prefHeight="300"/>
            </VBox>
            
            <!-- Market Positions Section -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
               <Label text="Market Positions" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
               <ListView fx:id="stancesListView" prefHeight="300"/>
            </VBox>
            
            <!-- Investment Focus / Risk Avoidance -->
            <HBox spacing="15">
               <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" HBox.hgrow="ALWAYS">
                  <Label text="âœ“ Investment Focus" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
                  <ListView fx:id="abidesByListView" prefHeight="150"/>
               </VBox>
               
               <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" HBox.hgrow="ALWAYS">
                  <Label text="âœ— Risk Avoidance" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;"/>
                  <ListView fx:id="doesNotFollowListView" prefHeight="150"/>
               </VBox>
            </HBox>
            
            <!-- Company News -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
               <Label text="Market News" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
               <ListView fx:id="newsListView" prefHeight="300"/>
            </VBox>
         </VBox>
      </ScrollPane>
   </center>
</BorderPane>
