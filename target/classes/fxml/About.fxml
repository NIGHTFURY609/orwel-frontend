<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.orwel.controller.AboutController">
   <top>
      <HBox style="-fx-background-color: #2c3e50; -fx-padding: 15;" alignment="CENTER_LEFT" spacing="20">
         <Label text="Orwel" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
         <Region HBox.hgrow="ALWAYS"/>
         <Button text="Dashboard" style="-fx-background-color: transparent; -fx-text-fill: white;" onAction="#navigateToDashboard"/>
         <Button text="Companies" style="-fx-background-color: transparent; -fx-text-fill: white;" onAction="#navigateToCountries"/>
         <Button text="Market News" style="-fx-background-color: transparent; -fx-text-fill: white;" onAction="#navigateToNews"/>
         <Button text="Investor Profile" style="-fx-background-color: transparent; -fx-text-fill: white;" onAction="#navigateToProfile"/>
         <Button text="About" style="-fx-background-color: #34495e; -fx-text-fill: white;"/>
         <Button text="Logout" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" onAction="#handleLogout"/>
      </HBox>
   </top>
   
   <center>
      <ScrollPane fitToWidth="true">
         <VBox spacing="20" style="-fx-padding: 40;">
            <Label text="About Orwel" style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
            <Label text="Orwel is a comprehensive investment and stock market intelligence platform."/>
            <Label text="We help investors make better decisions with real-time data, analysis, and market insights."/>
            
            <Separator/>
            
            <Label text="Features" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Label text="- Stock and Company Analysis"/>
            <Label text="- AI-Powered Risk Alerts"/>
            <Label text="- Curated Market News"/>
            <Label text="- Global Market News"/>
            <Label text="- Location-Based Services"/>
            
            <Separator/>
            
            <Label text="Technology" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Label text="Frontend: JavaFX 21"/>
            <Label text="Backend: REST API"/>
            <Label text="Build Tool: Maven"/>
            
            <Separator/>
            
            <Label text="Version 1.0.0 - MIT Hackathon 2026" style="-fx-font-size: 12px;"/>
         </VBox>
      </ScrollPane>
   </center>
</BorderPane>
