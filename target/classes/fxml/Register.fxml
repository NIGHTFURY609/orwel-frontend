<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.orwel.controller.RegisterController">
   <center>
      <ScrollPane fitToWidth="true" style="-fx-background-color: #f5f5f5;">
         <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #f5f5f5;">
            <padding>
               <Insets top="30" right="50" bottom="30" left="50"/>
            </padding>
            
            <!-- Title -->
            <VBox alignment="CENTER" spacing="10">
               <Text fill="#2c3e50" style="-fx-font-size: 36px; -fx-font-weight: bold;">
                  <text>Create Account</text>
               </Text>
               <Text fill="#7f8c8d" style="-fx-font-size: 14px;">
                  <text>Join Orwel to stay informed about global policies and government decisions</text>
               </Text>
            </VBox>
            
            <!-- Registration Form -->
            <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" maxWidth="500">
               <Label text="Basic Information" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
               
               <HBox spacing="10">
                  <TextField fx:id="firstNameField" promptText="First Name" HBox.hgrow="ALWAYS"/>
                  <TextField fx:id="lastNameField" promptText="Last Name" HBox.hgrow="ALWAYS"/>
               </HBox>
               
               <TextField fx:id="usernameField" promptText="Username"/>
               <TextField fx:id="emailField" promptText="Email"/>
               <PasswordField fx:id="passwordField" promptText="Password"/>
               <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password"/>
               
               <Separator/>
               
               <Label text="Location Information" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
               
               <TextField fx:id="addressField" promptText="Street Address"/>
               <HBox spacing="10">
                  <TextField fx:id="cityField" promptText="City" HBox.hgrow="ALWAYS"/>
                  <TextField fx:id="postalCodeField" promptText="Postal Code" prefWidth="150"/>
               </HBox>
               <ComboBox fx:id="countryComboBox" promptText="Select Country" prefWidth="100%"/>
               <Button fx:id="geocodeButton" text="Auto-fill Location" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" onAction="#handleGeocode"/>
               <Label fx:id="locationStatusLabel" textFill="#27ae60" style="-fx-font-size: 11px;" visible="false"/>
               
               <Separator/>
               
               <Label text="Personal Information" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
               
               <DatePicker fx:id="dateOfBirthPicker" promptText="Date of Birth"/>
               <ComboBox fx:id="marriageStatusComboBox" promptText="Marriage Status" prefWidth="100%"/>
               <TextField fx:id="phoneNumberField" promptText="Phone Number"/>
               <TextField fx:id="occupationField" promptText="Occupation"/>
               
               <Separator/>
               
               <Label text="Preferences" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
               
               <CheckBox fx:id="hasStocksCheckbox" text="I own stocks or investments"/>
               <CheckBox fx:id="plansToTravelCheckbox" text="I plan to travel internationally"/>
               
               <Label text="Interests (select all that apply):" style="-fx-font-size: 12px;"/>
               <FlowPane hgap="10" vgap="5">
                  <CheckBox fx:id="interestPolitics" text="Politics"/>
                  <CheckBox fx:id="interestTax" text="Tax"/>
                  <CheckBox fx:id="interestTravel" text="Travel"/>
                  <CheckBox fx:id="interestStocks" text="Stocks"/>
                  <CheckBox fx:id="interestImmigration" text="Immigration"/>
                  <CheckBox fx:id="interestTrade" text="Trade"/>
               </FlowPane>
               
               <Label fx:id="errorLabel" textFill="#e74c3c" style="-fx-font-size: 12px;" visible="false" wrapText="true"/>
               
               <HBox spacing="10">
                  <Button fx:id="registerButton" text="Register" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-pref-width: 150; -fx-pref-height: 40;" onAction="#handleRegister"/>
                  <Button fx:id="cancelButton" text="Cancel" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 5; -fx-pref-width: 150; -fx-pref-height: 40;" onAction="#handleCancel"/>
               </HBox>
            </VBox>
         </VBox>
      </ScrollPane>
   </center>
</BorderPane>
